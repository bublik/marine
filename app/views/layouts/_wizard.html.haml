#MyWizard.wizard
  %ul.steps
    %li.active{"data-target" => "#step1"}
      %span.badge.badge-info> 1
      = link_to('Personal', new_personal_path)
      %span.chevron
    %li{"data-target" => "#step2"}
      %span.badge> 2
      = link_to('Contact', new_contact_path)
      %span.chevron
    %li{"data-target" => "#step3"}
      %span.badge> 3
      = link_to('Certificates', certificates_path)
      %span.chevron
    %li{"data-target" => "#step4"}
      %span.badge> 4
      = link_to('Sea Service', seaservices_path)
      %span.chevron
    %li{"data-target" => "#step5"}
      %span.badge> 5
      = link_to('Language', langs_path)
      %span.chevron
  -#.actions
    %button.btn.btn-mini.btn-prev{:type => "button"}
      %i.icon-arrow-left>
      Prev
    %button.btn.btn-mini.btn-next{"data-last" => "Finish", :type => "button"}
      Next
      %i.icon-arrow-right
.step-content= yield
-##step1.step-pane.active
