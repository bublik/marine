  - @contacts.each do |contact|
    %tr
      %td= contact.country
      %td= contact.region
      %td= contact.street
      %td= contact.postal_code
      %td= contact.airport
      %td= contact.phone
      %td= contact.mphone
      %td= contact.email
      %td= contact.skype
      %td= link_to 'Show', contact
      %td= link_to 'Edit', edit_contact_path(contact)
