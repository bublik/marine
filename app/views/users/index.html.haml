%hr/
.row
  = render 'search_form'
  .new_seafarer{style: 'display: none'}
    = render 'seafarer_form'
  .col-md-2.pull-right
    = link_to('Add Seafarer', '#', onclick: "$('.search').hide(); $('.new_seafarer').fadeIn()", class: 'btn btn-success')

%br/

%table.table.table-hover
  %thead
    %tr
      %th Name
      %th Year old
      %th Lang
      %th Position
      %th Salary
      %th CV date
      %th Type
      %th DWT
      %th Actions
  - @users.decorate.each do |user|
    %tr
      %td
        = user.id
        = user.full_name
      %td= user.year_old
      %td= user.languages
      %td= user.required_position
      %td= user.salary
      %td
        = user.cv_updated_at
        - if current_user.can_edit?(user)
          = link_to(icon('pencil'), sailor_users_url(user_email: user.email, user_token: user.authentication_token), title: 'Edit')
      %td= user.vessel_types
      %td= user.dwts
      %td
        - if user.cv_updated_at.blank?
          %div
            = link_to 'HTML orig', cv_user_path(user.uuid, format: 'html'), target: 'blank'
            = link_to 'HTML affil', cv_user_path(user.uuid, format: 'html'), target: 'blank'
          %div
            = link_to 'PDF orig', cv_user_path(user.uuid, format: 'pdf'), target: 'blank'
            = link_to 'PDF affil', cv_user_path(user.uuid, format: 'pdf'), target: 'blank'

= paginate @users