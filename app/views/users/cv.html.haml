.text-right Updated at: #{@user.cv_updated_at}
.h2.text-center
  APPLICATION FORM
.row
  .col-md-4.contact= render 'cv_contact', {contact: @contact}
  .col-md-4
  .col-md-4
    = @personal.photo
.h4.text-center
  Required salary: #{@personal.required_salary}
%table.table.table-bordered.table-condensed
  %tr
    %td.head Last Name:
    %td{colspan: 3}= @personal.surname
    %td.head Rank:
    %td= @personal.rank
  %tr
    %td.head First Name:
    %td{colspan: 3}= @personal.name
    %td.head Position required:
    %td= @personal.required_position
  %tr
    %td.head Date of birth
    %td.head{colspan: 2} Place of birth
    %td.head Citizenship
    %td.head Marital status:
    %td= @personal.marital
  %tr
    %td= @personal.pp_dob
    %td{colspan: 2}= @personal.pp_pob
    %td= @personal.country.name
    %td.head Next of kin:
    %td= @user.next_of_kin_contact.next_of_kin
  %tr
    %td.head Address
    %td{colspan: 3}= @user.contact.decorate.cv_address
    %td.head Address
    %td= @user.next_of_kin_contact.decorate.cv_address
  %tr
    %td.head Cell:
    %td= @user.contact.mphone
    %td.head Tel:
    %td= @user.contact.phone
    %td.head Tel:
    %td= @user.next_of_kin_contact.phone
  %tr
    %td.head.text-center{colspan: 4} Last medical certificate:
    %td.head Height/ Weight:
    %td
      = @personal.height
      = @personal.weight
  %tr
    %td.head Place:
    %td= @last_medical_certificate ? @last_medical_certificate.decorate.country : '-'
    %td.head Date:
    %td= @last_medical_certificate ? @last_medical_certificate.decorate.from_date : '-'
    %td.head Overall size:
    %td= @personal.overallsize
  %tr
    %td.head Eyes:
    %td= @personal.eye
    %td.head Hair:
    %td= @personal.hair
    %td.head Shoes:
    %td= @personal.shoe

= render 'cv_personal_documents', {documents: @documents}
= render 'cv_certificates', {certificates: @certificates, langs: @langs}
= render 'cv_sea_services', {seaservices: @seaservices}
