.row
  - if contact.logo.present?
    .col-xs-12 #{request && request.format.html? ? image_tag(contact.logo_url, style: 'height: 90px') : wicked_pdf_image_tag(contact.logo_url, style: 'height: 90px')}
  .col-xs-12 #{contact.street}, #{contact.region}
.row
  .col-xs-12 #{contact.postal_code}, #{contact.country.name}
.row
  .col-xs-12 Tel: #{contact.phone}
.row
  .col-xs-12 Mob: #{contact.mphone}
.row
  .col-xs-12 E-mail: #{contact.email}
